{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "src/FlappyBirdBlazor.BlazorWasm/",
            },
            "args": [
                "build",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "options": {
            },
            "args": [
                "publish",
                "\"src/FlappyBirdBlazor.BlazorWasm/\"",
                "--configuration",
                "Release",
                "--output",
                "./artifacts/dist/release",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "src/FlappyBirdBlazor.BlazorWasm/",
            },
            "args": [
                "watch",
                "run",
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
